<Window x:Class="WallpaperApp.TrayApp.Views.WelcomeWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:WallpaperApp.TrayApp.Converters"
        Title="Welcome to Wallpaper Sync"
        Width="500" Height="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/app.ico">

    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <!-- Page 1: Welcome -->
        <Grid Visibility="{Binding IsPage1, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="40" VerticalAlignment="Center">
                <TextBlock Text="Welcome to Wallpaper Sync!"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Automatically update your desktop wallpaper from a URL or local file."
                           FontSize="14" TextWrapping="Wrap"
                           HorizontalAlignment="Center" TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Features:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                    <TextBlock Text="• Automatic refresh" FontSize="13" Margin="20,0,0,5"/>
                    <TextBlock Text="• Multiple fit modes" FontSize="13" Margin="20,0,0,5"/>
                    <TextBlock Text="• Offline fallback" FontSize="13" Margin="20,0,0,5"/>
                    <TextBlock Text="• Easy configuration" FontSize="13" Margin="20,0,0,5"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="20">
                <Button Content="Get Started >" Command="{Binding NextCommand}"
                        Padding="20,8" Height="35" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- Page 2: Quick Setup -->
        <Grid Visibility="{Binding IsPage2, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Quick Setup"
                       FontSize="24" FontWeight="Bold"
                       Margin="40,30,40,20"/>

            <StackPanel Grid.Row="1" Margin="40,0,40,20" VerticalAlignment="Top">
                <TextBlock Text="Image URL (demo pre-filled):"
                           FontWeight="Bold" FontSize="13" Margin="0,0,0,10"/>
                <TextBox Text="{Binding DemoUrl, UpdateSourceTrigger=PropertyChanged}"
                         Height="30" VerticalContentAlignment="Center"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Refresh every:"
                           FontWeight="Bold" FontSize="13" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBox Text="{Binding RefreshIntervalMinutes, UpdateSourceTrigger=PropertyChanged}"
                             Width="60" Height="30" VerticalContentAlignment="Center"/>
                    <TextBlock Text="minutes" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <TextBlock TextWrapping="Wrap" Foreground="Gray" FontSize="12">
                    You can change these later in Settings (left-click tray icon).
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal"
                        HorizontalAlignment="Right" Margin="20">
                <Button Content="&lt; Back" Command="{Binding BackCommand}"
                        Margin="0,0,10,0" Padding="15,8" Height="35"/>
                <Button Content="Finish" Command="{Binding FinishCommand}"
                        Padding="20,8" Height="35" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
