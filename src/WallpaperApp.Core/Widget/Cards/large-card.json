{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Image",
      "url": "${imageUrl}",
      "size": "Stretch",
      "altText": "Wallpaper Sync"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Wallpaper Sync",
              "weight": "Bolder",
              "wrap": false
            },
            {
              "type": "TextBlock",
              "text": "Updated ${lastUpdated}",
              "size": "Small",
              "isSubtle": true,
              "wrap": false
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "TextBlock",
              "text": "${status}",
              "size": "Small",
              "color": "Good",
              "wrap": false
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "Refresh Now",
      "verb": "refresh"
    }
  ]
}
